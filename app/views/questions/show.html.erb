<h1><%= @question.title %></h1>
<p><%= @question.description %></p>

<%= link_to "<button>Edit</button>".html_safe, edit_question_path(@question) %>

<h3>Answers:</h3>
<% @answers.each do |answer| %>
<div class="answer">
  <%= simple_format(answer.body) %>
</div>
<% end %>

<h4>Submit an Answer:</h4>
<%= form_for([@question, @answer]) do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, size: '50x10'%>

    <% if @answer.errors %>
      <ul>
      <% @answer.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    <% end %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
